<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
        "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en">
  <% pagetitle = "Editing Portal: #{@portal.name} (#{@portal.id.to_s})" %>
    <head>
        <title><%= pagetitle %></title>
    </head>
<h2><%= pagetitle %></h2>

<%= link_to 'List', :action => 'list' %> | 
<%= link_to 'Show', :action => 'show', :id => @portal %>

<% form_for :portal, @portal, :url => { :action => "edit" } do |f| %>
  <%= render :partial => 'form' %>
  <%= f.submit "Save" %>
<% end %>
