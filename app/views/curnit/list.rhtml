<p><%= page_entries_info @curnits %></p>
<p><%= will_paginate @curnits %> </p>
<% form_tag "#{ActionController::AbstractRequest.relative_url_root}/#{@portal.id}/curnit", :method => 'get' do %>
  <% content_tag :label do %>
    Search for:<%= text_field_tag :search, params[:search] %> 
  <% end %>
<% end %>
<span class='create'><%= link_to 'New Curnit', :action => 'create', :pid => params[:pid] %></span>
<hr />
<table cellpadding="3" cellspacing="3">
  <tr>
    <td></td>
    <td><b>Id</b></td>
    <td><b>Name</b></td>
    <td><b>Url</b></td>
  </tr>
  <% @curnits.each {|curnit| %>
    <tr>
      <td width=200><%= link_to 'Show', :action => 'show', :id => curnit %> | <%= link_to 'Edit', :action => 'edit', :id => curnit %></td>
      <td><%= curnit.id.to_s %></td>
      <td><%= curnit.name %></td>
      <td><%= curnit.url %></td>
    </tr>
	<tr>
      <td></td>
      <td colspan="3">
        <em>(<%= pluralize(curnit.offerings.count, "offering") %>, created: <%= curnit.created_at.strftime("%a %b %d %H:%M %Z %Y") %>)</em>
      </td>
    </tr>
  <% } %>
</table>
