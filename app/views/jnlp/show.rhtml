<%= link_to 'List', :action => 'list'  %> | 
<%= link_to 'Edit', :action => 'edit' %>
 
<table cellpadding="1" cellspacing="1">
  <tr><td>Id: </td><td><%= @jnlp.id.to_s %></td></tr>
  <tr><td>Name: </td><td><%= @jnlp.name %></td></tr>
  <tr><td>Url: </td><td><%= @jnlp.url %></td></tr>
  <tr><td>Last Modified: </td><td><%= @jnlp.last_modified.to_s %></td></tr>
  <tr><td>Always Update: </td><td><b><%= @jnlp.always_update ? "true" : "false" %></b></td></tr>
  <% @jnlp.config_version ||= ConfigVersion.find(:first) -%>
  <% if @jnlp.config_version -%>
  <tr><td>Config version: </td><td><%= @jnlp.config_version.name %>, (id: <%= @jnlp.config_version.id %>, ver: <%= @jnlp.config_version.version %> )</td></tr>
  <% end -%>
</table>
<div style="background-color: #BBFFEE; padding: 10px; border: 1px solid gray; margin: 10px; font: 11px sans-serif;">
  Original Jnlp Body:
  <div style="background-color: #99FFCC; padding: 10px; border: 1px dotted gray; margin: 5px 5px; 10px 10px font: sans-serif;">
    <%= if @jnlp.body
          display_xml2(@jnlp.body)
        else
          "No jnlp resource available at #{@jnlp.url}."
    end %>
  </div>
</div>

<%= display_xml(@jnlp, ['body']) %>
