<p><%= link_to 'Back to workgroup', :controller => 'workgroup', :action => 'show', :id => @workgroup %></p>

<table cellpadding="3" cellspacing="3">
  <tr>
    <td><b>Id</b></td>
    <td><b>Info</b></td>
  </tr>
  <% LogBundle.find(:all, :conditions => ["workgroup_id = ?", @workgroup.id]).each {|log_bundle| %>
    <tr>
      <td><%= log_bundle.id.to_s %></td>
      <td>
        <%= link_to 'Show', :action => 'show', :lid => log_bundle %>
		<% if log_bundle.bundle %>
        <em>(session: <%= log_bundle.bundle.sail_session_start_time.strftime("%a %b %d %H:%M %Z %Y") %>)</em>
		<% else %>
		<em>(created: <%= log_bundle.created_at.strftime("%a %b %d %H:%M %Z %Y") %>)</em>
		<% end %>
      </td>
    </tr>
  <% } %>
</table>
