<%= link_to 'New Workgroup', :action => 'new', :pid => params[:pid] %>

<table cellpadding="3" cellspacing="3">
  <tr>
    <td><b>Id</b></td>
    <td><b>Name</b></td>
    <td><b>Portal Token</b></td>
  </tr>
  <% for workgroup in @workgroups %>
    <tr>
      <td><%= workgroup.id.to_s %></td>
      <td><%= workgroup.name %></td>
      <td><%= workgroup.portal_token %></td>
      <td>
        <%= link_to 'Show', :action => 'show', :id => workgroup %> | 
        <%= link_to 'Edit', :action => 'edit', :id => workgroup %> | 
        <%= link_to 'Destroy', { :action => 'destroy', :id => workgroup }, :confirm => 'Are you sure?', :post => true %>
      </td>
    </tr>
  <% end %>
</table>
